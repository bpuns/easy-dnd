{
  "name": "easy-dnd",
  "version": "1.0.0",
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "doc": "npm --workspace doc start",
    "buildDoc": "npm --workspace doc run build",
    "buildEsModule": "node ./scripts/build.mjs es",
    "buildReleases": "node ./scripts/build.mjs releases",
    "start:reactDemo": "npm --workspace react-demo start",
    "start:react18Demo": "npm --workspace react18-demo start",
    "start:vueDemo": "npm --workspace vue-demo start"
  },
  "workspaces": [
    "examples/*",
    "./docs"
  ],
  "keywords": [
    "vue",
    "react",
    "dnd",
    "drag",
    "drop"
  ],
  "engines": {
    "node": ">=16.5.0",
    "npm": ">=6.0.0"
  },
  "author": "bpuns",
  "repository": "https://github.com/bpuns/easy-dnd.git",
  "devDependencies": {
    "@types/react": "17.0.2",
    "@typescript-eslint/parser": "4.15.2",
    "@vitejs/plugin-vue": "^4.3.4",
    "eslint": "7.20.0",
    "fs-extra": "^11.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-replace-imports": "^1.0.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.36.0",
    "ts-transform-paths": "^3.0.0",
    "tslib": "2.4.0",
    "typescript": "5.0.4",
    "vite": "^4.4.9",
    "vue": "^3.3.4"
  }
}
