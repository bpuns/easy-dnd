{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "es2022"
    ],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "easy-dnd": [
        "../../build"
      ],
      "easy-dnd/vue": [
        "../../build/vue"
      ],
      "src/*": [
        "./src/*"
      ]
    }
  }
}